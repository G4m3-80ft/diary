{
    "root_config": {
        "title": "EditColumnScreen"
    },
    "args": {
        "relief": "ridge",
        "bd": 2
    },
    "grid_config": {
        "rows": [1, 1, 1, 1, 1],
        "cols": [1, 1, 0, 1]
    },
    "elements": {
        "name_label": {
            "type": "Label",
            "args": {
                "text": "Name",
                "anchor": "w"
            },
            "grid": {
                "row": 1,
                "column": 1,
                "sticky": "w"
            }
        },
        "name_entry": {
            "type": "Entry",
            "args": {
                "justify": "left",
                "width": 30
            },
            "grid": {
                "row": 1,
                "column": 2,
                "sticky": "e"
            }
        },
        "type_label": {
            "type": "Label",
            "args": {
                "text": "Type",
                "anchor": "w"
            },
            "grid": {
                "row": 2,
                "column": 1,
                "sticky": "w"
            }
        },
        "type_selection": {
            "type": "OptionMenu",
            "args": [
                "text",
                "checkbox",
                "int",
                "float",
                "date",
                "scale",
                "color",
                "gradient"
            ],
            "grid": {
                "row": 2,
                "column": 2,
                "sticky": "ew"
            }
        },
        "default_label": {
            "type": "Label",
            "args": {
                "text": "Default",
                "anchor": "nw"
            },
            "grid": {
                "row": 3,
                "column": 1,
                "sticky": "nw"
            }
        },
        "default_value": {
            "type": "Entry",
            "args": {},
            "grid": {
                "row": 3,
                "column": 2,
                "sticky": "nesw"
            }
        },
        "specific_settings": {
            "type": "Frame",
            "args": {
                "relief": "ridge",
                "bd": 5
            },
            "grid": {
                "row": 4,
                "column": 1,
                "columnspan": 2,
                "sticky": "nesw"
            }
        }
    }
}